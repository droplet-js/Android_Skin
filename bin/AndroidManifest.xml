<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.v7lin.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- 各种权限 -->
    <!-- 接收开机广播权限所需权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 设备状态权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络设备访问权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- SDCard 读写、创建和删除文件权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 修改系统设置权限 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 获得 log 信息 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- 完全退出程序权限 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 创建和删除快捷方式权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <!-- 应用安装限制 -->
    <!-- API: 11 Android 3.0 ActionBar targetSdkVersion >= 11 -->
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="20" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <!-- 屏幕支持 -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <original-package android:name="com.v7lin.android" />

    <!-- 加载被测主程序包名 -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.v7lin.android" />

    <application
        android:name="com.v7lin.android.content.EnvAppConfig"
        android:allowBackup="false"
        android:allowClearUserData="false"
        android:description="@string/app_description"
        android:label="@string/app_name"
        android:persistent="true"
        android:process="com.v7lin.android"
        android:theme="@style/Theme.Normal" >

        <!-- 需要加载测试扩展包 -->
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.v7lin.android.test.TestActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.v7lin.android.test.TestDexActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>